-- Define the background image and the UI for the executor
local backgroundImageUrl = "rbxassetid://18648068501"

-- Create the UI elements
local ScreenGui = Instance.new("ScreenGui")
local Background = Instance.new("ImageLabel")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local TextBox = Instance.new("TextBox")
local ExecuteButton = Instance.new("TextButton")
local ClearButton = Instance.new("TextButton")

ScreenGui.Name = "HamsasExecutor"
ScreenGui.Parent = game.CoreGui

Background.Name = "Background"
Background.Parent = ScreenGui
Background.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Background.BackgroundTransparency = 1.000
Background.Size = UDim2.new(1, 0, 1, 0)
Background.Image = backgroundImageUrl

Frame.Name = "Frame"
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BackgroundTransparency = 0.5
Frame.Position = UDim2.new(0.3, 0, 0.3, 0)
Frame.Size = UDim2.new(0.4, 0, 0.4, 0)
Frame.BorderSizePixel = 0
Frame.Draggable = true
Frame.Active = true
Frame.Selectable = true

Title.Name = "Title"
Title.Parent = Frame
Title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Title.BackgroundTransparency = 1.000
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.Font = Enum.Font.SourceSansBold
Title.Text = "Hamsas Executor"
Title.TextColor3 = Color3.fromRGB(0, 255, 0)
Title.TextScaled = true
Title.TextWrapped = true

TextBox.Name = "ScriptInput"
TextBox.Parent = Frame
TextBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
TextBox.BackgroundTransparency = 0.8
TextBox.Position = UDim2.new(0.05, 0, 0.3, 0)
TextBox.Size = UDim2.new(0.9, 0, 0.5, 0)
TextBox.Font = Enum.Font.Code
TextBox.Text = "Enter your script here"
TextBox.TextColor3 = Color3.fromRGB(255, 255, 255)
TextBox.TextScaled = true
TextBox.TextWrapped = true
TextBox.ClearTextOnFocus = true

ExecuteButton.Name = "ExecuteButton"
ExecuteButton.Parent = Frame
ExecuteButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
ExecuteButton.Position = UDim2.new(0.05, 0, 0.85, 0)
ExecuteButton.Size = UDim2.new(0.4, 0, 0.1, 0)
ExecuteButton.Font = Enum.Font.SourceSansBold
ExecuteButton.Text = "Execute"
ExecuteButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ExecuteButton.TextScaled = true
ExecuteButton.TextWrapped = true

ClearButton.Name = "ClearButton"
ClearButton.Parent = Frame
ClearButton.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
ClearButton.Position = UDim2.new(0.55, 0, 0.85, 0)
ClearButton.Size = UDim2.new(0.4, 0, 0.1, 0)
ClearButton.Font = Enum.Font.SourceSansBold
ClearButton.Text = "Clear"
ClearButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ClearButton.TextScaled = true
ClearButton.TextWrapped = true

-- Function to execute the script from the input box
ExecuteButton.MouseButton1Click:Connect(function()
    local scriptSource = TextBox.Text
    local success, err = pcall(function()
        loadstring(scriptSource)()
    end)
    if not success then
        warn("Error executing script: " .. err)
    end
end)

-- Function to clear the text box
ClearButton.MouseButton1Click:Connect(function()
    TextBox.Text = ""
end)
